						<home>C:\ecosistema\apache-tomcat-8.0.36</home>
						<properties>
							<cargo.servlet.port>8080</cargo.servlet.port>
						</properties>
					</configuration>
					<deployables>
						<deployable>
							<groupId>com.curso.ecosistema</groupId>
